
<h1> Create an Article</h1>

<% if @article.errors.any? %>
<h2>The following errors prvented the article from being created</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do|foo| %>
  <p>
    <%= foo.label :title %>
    <br>
    <%= foo.text_field :title %>
  </p>

  <p>
    <%= foo.label :description %>
    <br>
    <%= foo.text_area :description %>
  </p>

  <%= foo.submit %>
<% end %>